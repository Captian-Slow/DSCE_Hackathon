<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        android:padding="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/taskTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="9dp"
                android:text="Message Title"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="22sp" />


            <TextView
                android:id="@+id/taskBodyTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="19dp"
                android:text="Message Body"
                android:textColor="#000"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4a5a71"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_upvote" />

                <TextView
                    android:id="@+id/upvote_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:padding="4dp"
                    android:text="123"
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_downvote" />

                <TextView
                    android:id="@+id/downvote_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:padding="4dp"
                    android:text="1"
                    android:textAlignment="textEnd"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <ImageButton

                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/spade_ico" />

                    <TextView
                        android:id="@+id/working_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:padding="4dp"
                        android:text="1"
                        android:textAlignment="textEnd"
                        android:textSize="20dp" />

                    <ImageButton
                        android:id="@+id/imageView3"

                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_action_name" />

                    <TextView
                        android:id="@+id/message_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:padding="10dp"
                        android:text="1"
                        android:textAlignment="textEnd"
                        android:textSize="20dp" />

                </LinearLayout>


                <!--
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2017/5/17"
                    android:id="@+id/date_uploaded"
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:textAlignment="textEnd"
                    />
                -->
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/date_uploaded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="10dp"
                    android:text="27/12/2017"
                    android:textAlignment="textEnd" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>